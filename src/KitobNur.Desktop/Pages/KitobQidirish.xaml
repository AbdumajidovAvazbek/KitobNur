                    FontSize="24"
                    Padding="0,0,50,0"
                    FontStyle="Normal"
                    Foreground="White"
                    Background="#2F6EA5"
                    Margin="20,15,40,10"
                    Height="35"
                    Width="250"
                    Cursor="Hand"
                    Click="QidirishButton_Click">
                </Button>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </Grid>
        </ScrollViewer>
